{
  "name": "promptlint",
  "version": "0.1.0",
  "description": "CLI tool to lint AI coding prompts for ambiguity, safety, and completeness",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "promptlint": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "cli",
    "llm",
    "prompt",
    "lint",
    "ai"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "bun run src/cli/index.ts",
    "test": "bun test",
    "check": "tsc -p tsconfig.json --noEmit",
    "prepare": "npm run build",
    "setup-hooks": "node scripts/install-precommit-hook.mjs"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.24",
    "ai": "^4.3.16",
    "chalk": "^5.4.1",
    "commander": "^13.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "typescript": "^5.8.2"
  }
}
